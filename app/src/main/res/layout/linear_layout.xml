<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    >

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="80px"
        app:srcCompat="@drawable/bmw"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:layout_marginTop="100px"
        >


        <Button
            android:id="@+id/button4"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="40dp"
            android:textSize="20dp"
            android:text="Button 1" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="80dp"
            android:textSize="20dp"
            android:text="Button 2" />


    </LinearLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="650dp"
        android:layout_height="80dp"
        android:layout_marginTop="70px"
        android:textSize="30dp"
        android:text="@string/match_parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:layout_marginTop="70px"
        android:layout_marginLeft="235dp"
        android:textSize="20dp"
        android:text="Right" />

    <Button
        android:id="@+id/button9"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:layout_marginTop="10px"
        android:layout_marginRight="235dp"
        android:textSize="20dp"
        android:text="Left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:layout_marginTop="35px"
        >

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:layout_marginLeft="60dp"
            app:srcCompat="@drawable/baseline_first_page_24" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="6"
            android:gravity="center"
            android:textSize="20dp"
            android:text="@string/motor" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:layout_marginRight="60dp"
            app:srcCompat="@drawable/baseline_last_page_24" />
    </LinearLayout>




</LinearLayout>